<div class="container">
    <h3 class="text-center">homepage</h3>
    <table class="table table-striped">
        <thead>
            <th>ID</th>
            <th>Player Name</th>
            <th>Runs</th>
            <th>Availablity</th>
        </thead>
        <tbody>
            {{#each players}}
            <tr>
                <td>{{incrementByOne @index}}</td>
                <td>{{{bold this.playerName}}}</td>
                <td>{{this.runs}}</td>
                <td>
                    <button class="btn {{#if availablity}}btn-success{{else}}btn-danger{{/if}} avl"></button>
                    <!--{{this.availablity}}-->
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>